APP_NAME=StudioKayu
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000

LOG_CHANNEL=stack
LOG_LEVEL=debug

# --- DATABASE ---
# Sesuaikan jika kamu pakai port berbeda atau ada password di MySQL/XAMPP
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=studiokayu_db
DB_USERNAME=root
DB_PASSWORD=root80

# --- BROADCAST & CACHE ---
BROADCAST_DRIVER=log
CACHE_DRIVER=file
FILESYSTEM_DISK=public
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120

# --- MAIL (Gunakan Mailtrap.io untuk testing gratis) ---
MAIL_MAILER=smtp
MAIL_HOST=sandbox.smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@studiokayu.com"
MAIL_FROM_NAME="${APP_NAME}"

# --- CORS (Sangat Penting agar React bisa akses) ---
# Jika menggunakan Laravel 11, setting ini biasanya di config/cors.php
# Tapi pastikan port React (5173) sudah terdaftar.